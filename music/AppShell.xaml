<Shell
    x:Class="music.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:music"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Home">
            <ShellContent
                ContentTemplate="{DataTemplate local:HomePage}"
                Route="HomePage" />
        </Tab>
        <Tab Title="Search">
            <ShellContent
                ContentTemplate="{DataTemplate local:SearchPage}"
                Route="SearchPage" />
        </Tab>

        <Tab Title="Library">
            <ShellContent
                ContentTemplate="{DataTemplate local:LibraryPage}"
                Route="LibraryPage" />
        </Tab>
        <Tab Title="Player">
            <ShellContent
                ContentTemplate="{DataTemplate local:PlayerPage}"
                Route="PlayerPage" />
        </Tab>
        <Tab Title="Web">
            <ShellContent
                ContentTemplate="{DataTemplate local:WebPage}"
                Route="WebPage" />
        </Tab>
    </TabBar>
</Shell>
